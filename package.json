{
  "name": "squad-api-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=local ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "NODE_ENV=local ts-node-dev -r tsconfig-paths/register --poll src/index.ts",
    "watch": "NODE_ENV=local ts-node -r tsconfig-paths/register src/index.ts",
    "start:watch": "NODE_ENV=local concurrently \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "start:watch2": "NODE_ENV=local concurrently \"npx ttsc --watch\" \"nodemon -q dist/src/index.js\"",
    "test": "jest --runInBand --no-cache",
    "test:watch": "jest --runInBand --watchAll --no-cache",
    "dev:offline": "sls offline --stage dev",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc && sh ./scripts/copy.sh",
    "build2": "npm run clean && ttsc -p . && sh ./scripts/copy.sh",
    "cli": "npm run build && cd dist && node src/cli/local.cli.js",
    "db:drop": "npm run cli s:cli db:drop",
    "db:create": "npm run cli s:cli db:create",
    "db:migrate": "npm run cli s:cli db:migrate",
    "db:seed:all": "npm run cli s:cli db:seed:all",
    "db:reset": "npm run cli s:cli db:drop db:create db:migrate",
    "db:reset:all": "npm run cli s:cli db:drop db:create db:migrate db:seed:all",
    "db:migrate:all": "npm run build && npx makemigration && npm run cli s:cli db:migrate",
    "db:makeigration": "npm run build && npx makemigration",
    "db:gen:post:migration:file": "ts-node-dev src/cli/post.migration.cli s:cli:m",
    "git:push": "git add . && git commit -m 'chore: more additions [skip test]' && git push",
    "dc:up": "docker compose up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^29.5.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-jsencrypt": "^1.0.0",
    "pg": "^8.11.0",
    "randomstring": "^1.3.0",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1",
    "winston": "^3.9.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^3.3.5",
    "@types/express": "^4.17.17",
    "@types/faker": "^5.5.8",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/pg": "^8.10.2",
    "@types/randomstring": "^1.1.8",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "faker": "^5.5.3",
    "jest": "^29.5.0",
    "sequelize-auto-migrations-v2": "^1.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.3",
    "typescript-transform-paths": "^3.4.6"
  }
}
